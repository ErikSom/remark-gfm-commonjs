{
  "compilerOptions": {
    "checkJs": true,
    "declaration": true,
    "exactOptionalPropertyTypes": true,
    "lib": ["es5"],
    "module": "commonjs",
    "strict": true,
    "target": "es5",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
  },
  "exclude": ["coverage/", "node_modules/"],
  "include": ["**/*.js"]
}
